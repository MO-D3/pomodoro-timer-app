{
  "name": "pomodoro-with-me",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "regression": "npx playwright test",
    "test:desktop": "npm run test:chrome && npm run test:firefox && npm run test:safari",
    "test:chrome": "npx playwright test --project=chromium-desktop",
    "test:firefox": "npx playwright test --project=firefox-desktop",
    "test:safari": "npx playwright test --project=safari-desktop",
    "test:iphone": "npx playwright test --project=iphone-latest",
    "test:samsung": "npx playwright test --project=samsung-latest",
    "install:all": "npm install && npx playwright install",
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@playwright/test": "^1.54.1",
    "@types/react": "^18.2.19",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.1.0",
    "autoprefixer": "^10.4.15",
    "eslint": "^9.32.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "postcss": "^8.4.31",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.4",
    "typescript-eslint": "^8.38.0",
    "vite": "^6.3.5"
  }
}
